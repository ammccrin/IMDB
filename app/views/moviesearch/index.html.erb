<header>
      <%= form_tag("/", method: "get") do %>
        <%= label_tag('tite', "Search by title:") %>
        <%= text_field_tag('title') %>
        <%= submit_tag("Search") %>
      <% end %>
</header>

<% if @movies %>
  <div class='center'>
    <h1>Here is your movie</h1>
    <p><%= @movies['Title'] %></p>
    <img src= <%= @movies["Poster"]%> alt="">
  </div>
<% end %>
